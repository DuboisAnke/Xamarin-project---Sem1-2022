<?xml version="1.0" encoding="utf-8" ?>
<resources>

	<style name="Theme.Splash" parent="android:Theme">
		<item name="android:windowBackground">@drawable/splashscrn</item>
		<item name="android:windowNoTitle">true</item>
		<item name="android:windowIsTranslucent">false</item>
		<item name="android:windowIsFloating">false</item>
		<item name="android:backgroundDimEnabled">true</item>
	</style>

	<style name="MainTheme" parent="MainTheme.Base">
		<!-- As of Xamarin.Forms 4.6 the theme has moved into the Forms binary -->
		<!-- If you want to override anything you can do that here. -->
		<!-- Underneath are a couple of entries to get you started. -->

		<!-- Set theme colors from https://aka.ms/material-colors -->
		<!-- colorPrimary is used for the default action bar background -->
		<item name="colorPrimary">#4A4E69</item>
		<!-- colorPrimaryDark is used for the status bar -->
		<item name="colorPrimaryDark">#22223B</item>
		<!-- colorAccent is used as the default value for colorControlActivated
         which is used to tint widgets -->
		<item name="colorAccent">#FFA299</item>
		<item name="android:datePickerDialogTheme">@style/AppCompatDialogStyle</item>
	</style>
	<style name="AppCompatDialogStyle">
		<item name="colorAccent">#4A4E69</item>
		<item name="android:textColorPrimary">#22223B</item>
	</style>
</resources>